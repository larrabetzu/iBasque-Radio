fastlane_version "1.49.0"

default_platform :ios


platform :ios do
  before_all do
    # ENV["SLACK_URL"] = "https://hooks.slack.com/services/..."

    #increment_build_number

    # xctool # run the tests of your app
  end

  desc "Submit a new Beta Build to Apple TestFlight"
  lane :beta do
    cert
    sigh(adhoc: true,
         force: true)

    build_app(scheme: "iBasqueRadio",
            workspace: "iBasqueRadio.xcworkspace",
            include_bitcode: true)

    changelog_from_git_commits # this will generate the changelog based on your last commits
    upload_to_testflight
    add_git_tag
    
  end

  desc "Deploy a new version to the App Store"
  lane :deploy do
    snapshot
    # sigh
    gym(scheme: "appStore") # Build your app - more options available
    deliver(force: true)
    # frameit
  end

  # You can define as many lanes as you want

  after_all do |lane|
    # This block is called, only if the executed lane was successful
    
    # slack(
    #   message: "Successfully deployed new App Update."
    # )
  end

  error do |lane, exception|
    # slack(
    #   message: exception.message,
    #   success: false
    # )
  end
end



